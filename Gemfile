source 'https://rubygems.org'

group :rails4 do
  # Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
  gem 'rails', '~> 4.2.0'
  # Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
  gem 'turbolinks'
  # Call javascript code and manipulate javascript objects from ruby
  gem 'therubyrhino'
  # Protect attributes from mass-assignment in ActiveRecord models.
  gem 'protected_attributes'
end

group :ui do
  gem 'will_paginate'
  gem 'will_paginate_mongoid'
  # Wrapper around the Google Chart Tools that allows anyone to create the same beautiful charts with just plain Ruby
  gem 'google_visualr'
  # Itâ€™s a small library to provide the Rails I18n translations on Javascript.
  gem 'i18n-js', '>= 3.0.0.rc8'
end

group :db do
  gem 'mongoid', '~> 4'
end

group :templates do
  # Use SCSS for stylesheets
  gem 'sass-rails'
  # Foundation::Rails is a gem to make it super easy to use Foundation in your upcoming Rails project.
  gem 'foundation-rails'
end

group :javascript do
  # Use CoffeeScript for .js.coffee assets and views
  gem 'coffee-rails', '~> 4'
  # Use jquery as the JavaScript library
  gem 'jquery-rails'
  # Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
  gem 'jbuilder', '~> 2.0'
  # Enable the AMD design pattern for Javascript modules and integrate into the Asset Pipeline ========>
  gem 'requirejs-rails'
end

group :development do
  gem 'rails_layout'
  gem 'execjs'
  gem 'rails-perftest'
  gem 'tzinfo-data'
end
